<div id="workouts">
  <div class="w-full sm:grid sm:grid-cols-3 gap-8">

    <% @workouts.each do |workout| %>
      <div class="bg-blue-200 p-4">

        <p class="w-full py-2 text-lg pl-1">Fecha: <b><%= workout.day.to_formatted_s(:short) %></b></p>

        <hr class="border-blue-600 my-2">

        <table class="w-full leading-loose">
          <tr>
            <th class="w-1/3 text-left pl-1">Ejercicio</th>
            <th class="w-1/3 text-center">Peso</th>
            <th class="w-1/3 text-center">Reps / Series</th>
          </tr>
          <tr>
            <td class="w-1/3 text-left bg-blue-100 pl-1">Dominadas</td>
            <td class="w-1/3 text-center bg-blue-100"><%= workout.v_pull_weight %><%= workout.v_pull_weight.present? ? " kg" : "-" %></td>
            <td class="w-1/3 text-center bg-blue-100">
              <% if workout.v_pull_reps.present? %>
                <%= workout.v_pull_reps%> x <%= workout.v_pull_series %>
              <% else %>
                <%= "-" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="w-1/3 text-left pl-1">Press Militar</td>
            <td class="w-1/3 text-center"><%= workout.v_push_weight %><%= workout.v_push_weight.present? ? " kg" : "-" %></td>
            <td class="w-1/3 text-center">
              <% if workout.v_push_reps.present? %>
                <%= workout.v_push_reps%> x <%= workout.v_push_series %>
              <% else %>
                <%= "-" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="w-1/3 text-left bg-blue-100 pl-1">Remo</td>
            <td class="w-1/3 text-center bg-blue-100"><%= workout.h_pull_weight %><%= workout.h_pull_weight.present? ? " kg" : "-" %></td>
            <td class="w-1/3 text-center bg-blue-100">
              <% if workout.h_pull_reps.present? %>
                <%= workout.h_pull_reps%> x <%= workout.h_pull_series %>
              <% else %>
                <%= "-" %>
              <% end %>   
            </td>
          </tr>
          <tr>
            <td class="w-1/3 text-left pl-1">Press banca</td>
            <td class="w-1/3 text-center"><%= workout.h_push_weight %><%= workout.h_push_weight.present? ? " kg" : "-" %></td>
            <td class="w-1/3 text-center">
              <% if workout.h_push_reps.present? %>
                <%= workout.h_push_reps%> x <%= workout.h_push_series %>
              <% else %>
                <%= "-" %>
              <% end %>   
            </td>
          </tr>
          <tr>
            <td class="w-1/3 text-left bg-blue-100 pl-1">Sentadillas</td>
            <td class="w-1/3 text-center bg-blue-100"><%= workout.squat_weight %><%= workout.squat_weight.present? ? " kg" : "-" %></td>
            <td class="w-1/3 text-center bg-blue-100">
              <% if workout.squat_reps.present? %>
                <%= workout.squat_reps%> x <%= workout.squat_series %>
              <% else %>
                <%= "-" %>
              <% end %>   
            </td>
          </tr>
          <tr>
            <td class="w-1/3 text-left pl-1">Peso Muerto</td>
            <td class="w-1/3 text-center"><%= workout.dead_lift_weight %><%= workout.dead_lift_weight.present? ? " kg" : "-" %></td>
            <td class="w-1/3 text-center">
              <% if workout.dead_lift_reps.present? %>
                <%= workout.dead_lift_reps%> x <%= workout.dead_lift_series %>
              <% else %>
                <%= "-" %>
              <% end %>   
            </td>
          </tr>
        </table>

        <div class="text-white text-center grid grid-cols-1 mt-6">
          <%= link_to "Editar", edit_workout_path(workout), class:"bg-blue-600 hover:bg-blue-800 p-2" %>
        </div>

      </div>
    <% end %>

  </div>
</div>
